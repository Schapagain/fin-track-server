{
  "name": "finance-tracker",
  "version": "1.0.0",
  "description": "Simple personal finance tracking application build using the MERN stack",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "client-install": "npm install --prefix client",
    "devStart": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "Express",
    "Node.js",
    "MERN",
    "React"
  ],
  "author": "Sandesh Chapagain",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongoose": "^5.10.9",
    "njwt": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.5"
  }
}
